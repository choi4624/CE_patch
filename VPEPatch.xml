<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName = "LnS_MakeCompot"]/fixedIngredientFilter/categories</xpath>
					<value>
						<li>VCE_Fruit</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName = "LnS_MakeCompot"]/defaultIngredientFilter/categories</xpath>
					<value>
						<li>VCE_Fruit</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[defName = "LnS_MakeCompot"]/ingredients/li/filter</xpath>
					<value>
						<categories>
							<li>VCE_Fruit</li>
						</categories>	
					</value>
				</li>
			</operations>
		</match>				
	</Operation>
</Patch>