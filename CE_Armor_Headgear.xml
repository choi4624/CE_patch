<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Carnarodian, the two Mustelids Xenotypes and Factions</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

<!-- ========== SSH ========== -->

				<!-- this is only working the Bulk value -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="LnS_SSH"]/statBases</xpath>
					<value>
						<Bulk>2.4</Bulk>
						<WornBulk>0.9</WornBulk>
						<MaxHitPoints>100</MaxHitPoints>
					</value>
				</li>
				
				<!-- defensive stat sharp and blunt, heat is not adjust -->
				<li Class="PatchOperationReplace" >
					<xpath>Defs/ThingDef[defName="LnS_SSH"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>5.5</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="LnS_SSH"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>10</ArmorRating_Blunt>
					</value>		
				</li>

<!-- ========== Altyn ========== -->

				<!-- this is only working the Bulk value -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="LnS_Altyn"]/statBases</xpath>
					<value>
						<Bulk>3.5</Bulk>
						<WornBulk>1</WornBulk>
						<MaxHitPoints>250</MaxHitPoints>
					</value>
				</li>

				<!-- defensive stat sharp and blunt, heat is not adjust -->
				<li Class="PatchOperationReplace" >
					<xpath>Defs/ThingDef[defName="LnS_Altyn"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>14</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="LnS_Altyn"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>20</ArmorRating_Blunt>
					</value>		
				</li>
			</operations>
		</match>
	</Operation>
</Patch>