<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo96DU</defName>
		<label>9.6mm depleted uranium Ammo</label>
		<parent>AmmoRifles</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_96DU</defName>
		<label>9.6mm depleted uranium Ammo.</label>
		<ammoTypes>
			<Ammo_96DU>Bullet_96DU</Ammo_96DU>
		</ammoTypes>
		<similarTo>AmmoSet_Rifle</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="96DUBase" ParentName="SmallAmmoBase" Abstract="True">
		<description>Depleted uranium. Kill people imitate sacks when they are hit.</description>
		<statBases>
			<Mass>0.037</Mass>
			<Bulk>0.03</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo96DU</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="96DUBase">
		<defName>Ammo_96DU</defName>
		<label>9.6mm depleted uranium</label>
		<graphicData>
			<texPath>Things/Ammo/Rifle/Clip/Sabot</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.22</MarketValue>
			<Mass>0.029</Mass>
		</statBases>
		<ammoClass>Sabot</ammoClass>
		<cookOffProjectile>Bullet_96DU</cookOffProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base96DUBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>171</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base96DUBullet">
		<defName>Bullet_96DU</defName>
		<label>11.6mm depleted uranium bullet</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>13</damageAmountBase>
			<secondaryDamage>
				<li>
					<def>Flame_Secondary</def>
					<amount>9</amount>
				</li>
			</secondaryDamage>
			<armorPenetrationSharp>21</armorPenetrationSharp>
			<armorPenetrationBlunt>99.54</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->
	<RecipeDef ParentName="AdvancedAmmoRecipeBase">
		<defName>MakeAmmo_96DU</defName>
		<label>make 9.6mm depleted uranium cartridge x500</label>
		<description>Craft 500 9.6mm depleted uranium cartridges.</description>
		<jobString>Making 9.6mm depleted uranium cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>24</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Uranium</li>
				<li>FSX</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_96DU>500</Ammo_96DU>
		</products>
		<workAmount>5900</workAmount>
		<researchPrerequisites>
			<li>OA_RK_Weapon_A</li>
		</researchPrerequisites>
	</RecipeDef>

